<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_trainee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:backgroundTint="#4b6375"
    android:clickable="false"
    app:cardCornerRadius="20dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvTraineeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Trainee Name"
            android:textColor="#e9e9e9"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvTraineeMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Traineemobile"
            android:textColor="#e9e9e9"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTraineeEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Trainee email"
            android:textColor="#e9e9e9"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTraineeRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Trainee rank"
            android:textColor="#e9e9e9"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>